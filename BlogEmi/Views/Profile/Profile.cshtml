@model BlogEmi.Models.UserProfile

<h2>Profile</h2>

<div class="card">
    <div class="card-body">
        <h3>@Model.UserName</h3>

        <div>
            <strong>Description:</strong>
            <p>@Model.Description</p>
        </div>

        @if (Model.Image != null && Model.Image.Length > 0)
        {
            <img src="data:image/png;base64,@Convert.ToBase64String(Model.Image)" alt="Profile Image" style="max-width: 200px;" />
        }
        else
        {
            <p>No profile image available.</p>
        }

        <form asp-action="Edit" method="post" enctype="multipart/form-data">
            <div class="mb-3">
                <label for="description" class="form-label">Update Description</label>
                <textarea asp-for="Description" class="form-control"></textarea>
            </div>

            <div class="mb-3">
                <label for="image" class="form-label">Update Profile Image</label>
                <input type="file" name="image" class="form-control" />
            </div>

            <button type="submit" class="btn btn-primary">Save Changes</button>
        </form>
    </div>
</div>
